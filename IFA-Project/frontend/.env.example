# Frontend Environment Configuration Example
# Copy this file to .env and modify the values as needed

# Polling Configuration
# Set to 'true' to disable automatic polling for job status updates
VITE_DISABLE_AUTO_POLLING=false

# Maximum number of polling attempts before giving up
VITE_MAX_POLL_COUNT=30

# Interval between polling attempts in milliseconds
VITE_POLL_INTERVAL_MS=5000

# Auto iFlow Generation Control
# Set to 'true' to disable automatic iFlow generation after document upload
# When disabled, users must manually click "Generate iFlow" button
# This prevents the system from automatically triggering iFlow generation
# which can help with debugging and gives users more control
VITE_DISABLE_AUTO_IFLOW_GENERATION=false

# API Configuration
# Base URL for the backend API
VITE_API_BASE_URL=http://localhost:5000

# Development Configuration
# Enable debug logging in the frontend
VITE_DEBUG=false
