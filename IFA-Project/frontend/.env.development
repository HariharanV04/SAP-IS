# Development environment variables
# Main API URLs - Use relative path to leverage Vite proxy
VITE_API_URL=/api
VITE_MAIN_API_HOST=localhost:5000
VITE_MAIN_API_PROTOCOL=http

# iFlow API URLs (Anthropic) - BoomiToIS-API port (changed from 5001 to 5003 for feedback API)
VITE_IFLOW_API_URL=http://localhost:5003/api
VITE_IFLOW_API_HOST=localhost:5003
VITE_IFLOW_API_PROTOCOL=http

# Boomi API URLs (Anthropic) - BoomiToIS-API port
VITE_BOOMI_API_URL=http://localhost:5003/api
VITE_BOOMI_API_HOST=localhost:5003
VITE_BOOMI_API_PROTOCOL=http

# Gemma3 API URLs
VITE_GEMMA3_API_URL=http://localhost:5002/api
VITE_GEMMA3_API_HOST=localhost:5002
VITE_GEMMA3_API_PROTOCOL=http

# Environment flag
VITE_ENVIRONMENT=development

# Polling configuration
VITE_MAX_POLL_COUNT=60
VITE_POLL_INTERVAL_MS=2000
VITE_MAX_FAILED_ATTEMPTS=3
