#%RAML 1.0
title: Product API
version: v1
baseUri: http://localhost:8081/api/v1

/products:
  get:
    description: |
      This endpoint retrieves multiple products based on the provided product identifier.
      You can filter the results using the `productIdentifier` query parameter.
    queryParameters:
      productIdentifier:
        type: string
        description: The unique identifier of the product (e.g., HT-2000).
        required: true
    responses:
      200:
        description: A list of products matching the provided product identifier.
        body:
          application/json:
            type: array
            items:
              type: object
              properties:
                productIdentifier:
                  type: string
                  description: The unique identifier of the product.
                productName:
                  type: string
                  description: The name of the product.
                price:
                  type: number
                  description: The price of the product.
                description:
                  type: string
                  description: A brief description of the product.
      400:
        description: Bad Request - If the required query parameter is missing or invalid.
        body:
          application/json:
            example: |
              {
                "error": "Product identifier is required."
              }
      404:
        description: Not Found - If no products are found for the given identifier.
        body:
          application/json:
            example: |
              {
                "error": "No products found with the provided identifier."
              }
      500:
        description: Internal Server Error - If there is an issue with the server.
        body:
          application/json:
            example: |
              {
                "error": "Internal server error. Please try again later."
              }