{
  "api_name": "Products API",
  "base_url": "/products",
  "endpoints": [
    {
      "method": "GET",
      "path": "/products",
      "purpose": "Retrieves product details based on a product identifier",
      "components": [
        {
          "type": "groovy_script",
          "name": "Set_IsExistProduct_Property",
          "id": "script_set_isexistproduct",
          "config": {
            "script": "SetIsExistProductProperty.groovy"
          }
        },
        {
          "type": "odata",
          "name": "Get_Product_Details",
          "id": "odata_get_product",
          "config": {
            "address": "${property.SAP_HANA_URL}",
            "resource_path": "Products",
            "operation": "Query(GET)",
            "query_options": "$filter=ProductId eq '${property.productIdentifier}'&$select=ProductId,Category,CategoryName,CurrencyCode,DimensionDepth,DimensionHeight,DimensionUnit,DimensionWidth,LongDescription,Name,PictureUrl,Price,QuantityUnit,ShortDescription,SupplierId,Weight,WeightUnit"
          }
        },
        {
          "type": "enricher",
          "name": "Validate_Product_Identifier",
          "id": "enricher_validate_product",
          "config": {
            "content": "def productIdentifiers = properties.get(\"odata.productIdentifiers\").split(\",\")\ndef productId = message.getHeaders().get(\"productIdentifier\")\nreturn productIdentifiers.any { it == productId }"
          }
        },
        {
          "type": "enricher",
          "name": "Format_Error_Response",
          "id": "enricher_error_response",
          "config": {
            "content": "{\n\t\"status\": \"error\",\n\t\"message\": \"The product identifier \" + properties.get(\"productIdentifier\") + \" was not found.\",\n\t\"errorCode\": \"PRODUCT_NOT_FOUND\"\n}"
          }
        }
      ],
      "sequence": [
        "enricher_validate_product",
        "script_set_isexistproduct",
        "odata_get_product"
      ],
      "transformations": [
        {
          "name": "SetIsExistProductProperty.groovy",
          "type": "groovy",
          "script": "import com.sap.gateway.ip.core.customdev.util.Message;\n\ndef Message processData(Message message) {\n    def productIdentifiers = properties.get(\"odata.productIdentifiers\").split(\",\")\n    def productId = message.getHeaders().get(\"productIdentifier\")\n    def isExistProduct = productIdentifiers.any { it == productId }\n    \n    message.setProperty(\"isExistProduct\", isExistProduct)\n    message.setProperty(\"productIdentifier\", productId)\n    \n    return message;\n}"
        }
      ],
      "sequence_flows": [
        {
          "id": "SequenceFlow_Start",
          "source": "script_set_isexistproduct",
          "target": "odata_get_product",
          "is_immediate": true,
          "xml_content": "<bpmn2:sequenceFlow id=\"SequenceFlow_Start\" sourceRef=\"script_set_isexistproduct\" targetRef=\"odata_get_product\" isImmediate=\"true\"/>"
        },
        {
          "id": "SequenceFlow_1",
          "source": "odata_get_product",
          "target": "enricher_validate_product",
          "is_immediate": true,
          "xml_content": "<bpmn2:sequenceFlow id=\"SequenceFlow_1\" sourceRef=\"odata_get_product\" targetRef=\"enricher_validate_product\" isImmediate=\"true\"/>"
        },
        {
          "id": "SequenceFlow_End",
          "source": "enricher_validate_product",
          "target": "enricher_error_response",
          "is_immediate": true,
          "xml_content": "<bpmn2:sequenceFlow id=\"SequenceFlow_End\" sourceRef=\"enricher_validate_product\" targetRef=\"enricher_error_response\" isImmediate=\"true\"/>"
        }
      ]
    }
  ]
}